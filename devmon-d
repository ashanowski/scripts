#!/bin/sh
exec devmon --exec-on-drive "notify-send --icon=block-device --urgency=low \"Volume %l has been mounted\"" --exec-on-unmount "notify-send --icon=block-device --urgency=low \"Volume %l has been unmounted\"" --exec-on-remove "notify-send --icon=block-device --urgency=low \"Volume %l has been removed\""